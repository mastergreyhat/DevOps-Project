pipeline {
    agent any

     environment {
         DOCKERHUB_CREDENTIALS=credentials('docker-login')
     {

    stages {
        stage('Checkout') {
            steps {
                // Checkout your code from your Git repository
                checkout scm
            }
        }

        stage('Build and Push Docker Image') {
            steps {
                // Build a Docker image for your Flask app
                script {
                    dockerImage = docker.build('my-flask-app-jenkins')
                }

              // Push the Docker image to a container registry (e.g., Docker Hub)
                script {
                   sh  'echo $DOCKERHUB_CREDENTIALS_PWD | docker login -u aswin4686 --password-stdin'                    
                       }
                   }
                } 
            }
         }
     }
}
